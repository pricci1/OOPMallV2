<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POOmall"
        xmlns:view="clr-namespace:POOmall.View"
        x:Class="POOmall.MainWindow"
        mc:Ignorable="d"
        Title="POOMall"
        Height="362"
        Width="614">
  <Grid>
    <TabControl>

      <TabItem Header="Datos Inicio">
        <Grid Background="#FFE5E5E5">
          <view:ConfiguracionView />
        </Grid>
      </TabItem>
      <TabItem Header="Pisos">
        <Grid Background="#FFE5E5E5">
          <view:CrearPisosView />
        </Grid>
      </TabItem>
      <TabItem Header="Tiendas">
        <Grid Background="#FFE5E5E5">
          <view:DetallesMallView />
        </Grid>
      </TabItem>

      <TabItem Header="Simulación">
        <Grid Background="#FFE5E5E5">
          <view:SimulacionView />

        </Grid>
      </TabItem>
      <TabItem Header="Reportes">
        <Grid Background="#FFE5E5E5">
          <view:ReportesView />


        </Grid>
      </TabItem>
    </TabControl>
  </Grid>
</Window>
